@{
    ViewData["Title"] = "Change Password";
}

<style>
    body {
        background-color: #ADD8E6;
        font-family: 'Segoe UI', Tahoma, sans-serif;
    }

    .my-card {
        background-color: white;
        max-width: 400px;
        margin: 60px auto;
        padding: 25px;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }

    label {
        font-weight: bold;
    }

    button {
        margin-top: 15px;
        width: 100%;
    }
</style>

<div class="my-card">
    <h2 style="text-align:center;">Change Password</h2>

    <form asp-action="ChangePassword" asp-controller="Student" method="post">
        <div>
            <label for="newPass">New Password</label>
            <input type="password" id="newPass" name="newPass" class="form-control" required />
        </div>

        <br />

        <button type="submit" class="btn btn-primary">Save</button>
    </form>

    <a asp-action="Login" style="display:block; text-align:center; margin-top:10px;">
        Back to Login
    </a>
</div>